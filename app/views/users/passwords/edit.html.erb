<div class="container_white_shadow w-container">
  <h2 class="section-heading centered">Password RESET</h2>
  <div class="w-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"text-field w-input", placeholder: "New Password", required: true  %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"text-field w-input", placeholder: "Retype Password", required: true %>
      <%= f.submit "Update Password", class: "button_hollow_blue centered w-button" %>
    <% end %>
  </div>
</div>
