  <div class="content-wrapper">
    <h1 class="main_heading_whitebg">COMMUNITIES</h1>
    <div class="block_whtbg_shadow">
      <% if flash[:message] %>
        <p style="color:red;"> <%= flash[:message] %> </p>
      <% end %>
      <p>Communities are a place where...<br>communicate with others, find resources, joining it, find like-minded people.<br>Each community usually aligns with a workshop</p>
    </div>
    <div class="community_wrapper">
      <div class="row_community w-row">
        <div class="w-col w-col-6">
          <div><img src="<%=asset_path('KidandCar.png') %>" srcset="<%=asset_path('KidandCar-p-500.png')%> 500w, <%=asset_path('KidandCar-p-800.png')%> 800w, <%=asset_path('KidandCar-p-1080.png')%> 1080w, <%=asset_path('KidandCar.png')%> 1088w" sizes="(max-width: 479px) 87vw, (max-width: 767px) 90vw, (max-width: 991px) 45vw, 34vw" class="image_community">
            <h3 class="community-header">Introduction to Teaching Using Raspberry Pi</h3>
          </div>
          <%= render 'join_or_view_button', community: @communities.first %>
        </div>
        <div class="w-col w-col-6">
          <div><img src="<%=asset_path('image_alamedafairekid2.jpg')%>" srcset="<%=asset_path('image_alamedafairekid2-p-500.jpeg')%> 500w, <%=asset_path('image_alamedafairekid2-p-800.jpeg')%> 800w, <%=asset_path('image_alamedafairekid2.jpg')%> 952w" sizes="(max-width: 479px) 87vw, (max-width: 767px) 90vw, (max-width: 991px) 45vw, 34vw" class="image_community">
            <h3 class="community-header">Introduction to Teaching Using Raspberry Pi 2</h3>
            <%= render 'join_or_view_button', community: @communities.second %>
          </div>
        </div>
      </div>
    </div>
    <%#= link_to "LEAVE COMMUNITY", '#', id: "myBtn", class: "hollow_button_blue center w-button" %>
