        <span class="close">&times;</span>
        <h2 style="font-size: 20px">Confirm you&#x27;d like to leave the community.</h2>
        <%= link_to "I'd like to leave", @community_user, method: :delete, class: "button_blue full-width w-button" %>
        <a href="#" data-w-id="1e010a84-1696-0cea-bfca-65d957558b41" class="hollow_button_blue full_width w-button stay">I&#x27;d Like to stay</a>
      </div>
    </div>
  </div>
